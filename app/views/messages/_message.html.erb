<li id="message-<%= message.id %>">
  <%= link_to gravatar_for(message.user, size: 50), message.user %>
  <span class="user">From <%= link_to message.user.name, message.user %></span>
  <br>
  <span class="content">
    <%= message.content %>
  </span>
  <br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(message.created_at) %> ago.
  </span>
</li>
