<% if micropost.like_user?(current_user.id) %>
<%= link_to "like", micropost_like_path(micropost), method: :delete, :class => "btn btn-danger btn-sm", :id => "like-buttons", :remote => true %>
<% else %>
<%= link_to "like", micropost_likes_path(micropost), method: :post, :class => "btn btn-default btn-sm", :id => "unlike-buttons", :remote => true %>
<% end %>
